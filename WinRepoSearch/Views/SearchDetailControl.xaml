        <controls:MarkdownTextBlock 
            Padding="{StaticResource DetailPageMargin}"
            Text="{x:Bind ListDetailsMenuItem.Markdown, Mode=OneWay}"
            LinkClicked="MarkdownTextBlock_LinkClicked"
            />
    </ScrollViewer>
</views:UserControlBase>
