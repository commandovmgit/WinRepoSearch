                <TextBlock Text="{x:Bind ListDetailsMenuItem.AppRating, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
            </StackPanel>
            <StackPanel Name="description" Padding="0,15,0,0">
                <TextBlock
                    Margin="{StaticResource MediumTopMargin}"
