                <TextBlock
                    Style="{StaticResource DetailBodyStyle}"
                    Text="{x:Bind ListDetailsMenuItem.AppDescription, Mode=OneWay}" />
            </StackPanel>
            <StackPanel Name="notes" Padding="0,15,0,0" 
